local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local player = Players.LocalPlayer

getgenv().Functions = {
    AutoRebirthMachine = false,
    AutoBlowBubbles = false
}

local REBIRTH_INTERVAL = 3600

local Remote, LocalData
local success1, err1 = pcall(function()
    Remote = require(ReplicatedStorage.Shared.Framework.Network.Remote)
end)
local success2, err2 = pcall(function()
    LocalData = require(ReplicatedStorage.Client.Framework.Services.LocalData)
end)

if not success1 then
    warn("Failed to load Remote:", err1)
end
if not success2 then
    warn("Failed to load LocalData:", err2)
end

local Window = Rayfield:CreateWindow({
    Name = "Bubble Gum Simulator",
    LoadingTitle = "BGS Auto Farm",
    LoadingSubtitle = "by CSAM",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "BGSAutoFarm",
        FileName = "config"
    },
    Discord = {
        Enabled = false,
        Invite = "",
        RememberJoins = true
    },
    KeySystem = false
})

local MainTab = Window:CreateTab("Main", nil)
local MainSection = MainTab:CreateSection("Main Functions")

MainTab:CreateToggle({
    Name = "Auto Blow Bubbles",
    CurrentValue = false,
    Flag = "AutoBlowBubbles",
    
    Callback = function(Value)
        getgenv().Functions.AutoBlowBubbles = Value
        task.spawn(function()
            while Functions.AutoBlowBubbles do
                pcall(function()
                    task.wait()
                    if Remote then
                        Remote:FireServer("BlowBubble")
                    end
                end)
            end
        end)
    end
})

MainTab:CreateToggle({
    Name = "Auto Sell Bubbles",
    CurrentValue = false,
    Flag = "AutoSellBubbles",
    
    Callback = function(Value)
        getgenv().Functions.AutoSellBubbles = Value
        task.spawn(function()
            while Functions.AutoSellBubbles do
                pcall(function()
                    task.wait()
                    if Remote then
                        Remote:FireServer("SellBubble")
                    end
                end)
            end
        end)
    end
})

local RebirthTab = Window:CreateTab("Rebirth", nil)
local StatusSection = RebirthTab:CreateSection("Status")
local statusLabel = RebirthTab:CreateLabel("Status: Disabled")
local RebirthSection = RebirthTab:CreateSection("Rebirth Machine Settings")

local originalPosition = nil

local function findRebirthMachine()
    local workspace = game:GetService("Workspace")
    
    local success, rebirthMachine = pcall(function()
        return workspace:WaitForChild("RebirthMachine"):WaitForChild("Activation"):WaitForChild("Ring")
    end)
    
    if success and rebirthMachine then
        return rebirthMachine
    end
    
    return nil
end

local function teleportToRebirthMachine()
    local character = player.Character
    if not character then return false end
    
    local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
    if not humanoidRootPart then return false end
    
    originalPosition = humanoidRootPart.CFrame
    
    local rebirthMachine = findRebirthMachine()
    if not rebirthMachine then
        statusLabel:Set("Status: Rebirth machine not found")
        return false
    end
    
    local targetCFrame
    if rebirthMachine:IsA("Model") then
        targetCFrame = rebirthMachine:GetPivot()
    elseif rebirthMachine:IsA("BasePart") then
        targetCFrame = rebirthMachine.CFrame
    else
        return false
    end
    
    -- Teleport slightly above the ring so player drops down onto it
    humanoidRootPart.CFrame = targetCFrame + Vector3.new(0, 5, 0)
    
    return true
end

local function teleportBack()
    if originalPosition then
        local character = player.Character
        if character then
            local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
            if humanoidRootPart then
                humanoidRootPart.CFrame = originalPosition
            end
        end
    end
end

local function getValidSecretPets()
    local validPets = {}
    
    if not LocalData then
        warn("LocalData module not loaded")
        return validPets
    end
    
    local success, data = pcall(function()
        return LocalData:Get()
    end)
    
    if not success or not data or not data.Pets then
        warn("No pet data found")
        return validPets
    end
    
    for petGUID, petData in pairs(data.Pets) do
        if type(petData) == "table" then
            local petName = petData.Name or ""
            local isEquipped = petData.Equipped or false
            local isShiny = petData.Shiny or false
            local isMythic = petData.Mythic or false
            
            if petName == "Giant Bongo Kitty" and not isEquipped and not isShiny and not isMythic then
                table.insert(validPets, petGUID)
            end
        end
    end
    
    return validPets
end

local function findScrollingFrame(gui)
    -- Use the exact path we found
    local billboardGui = game:GetService("Workspace"):FindFirstChild("RebirthMachine")
    if billboardGui then
        billboardGui = billboardGui:FindFirstChild("Activation")
        if billboardGui then
            billboardGui = billboardGui:FindFirstChild("Root")
            if billboardGui then
                billboardGui = billboardGui:FindFirstChild("BillboardGui")
                if billboardGui then
                    for _, descendant in ipairs(billboardGui:GetDescendants()) do
                        if descendant:IsA("ScrollingFrame") then
                            return descendant
                        end
                    end
                end
            end
        end
    end
    return nil
end

local function scrollToFindPet(scrollFrame, targetGUID)
    if not scrollFrame then return nil end
    
    -- Try different scroll positions
    for scrollPos = 0, 1, 0.1 do
        scrollFrame.CanvasPosition = Vector2.new(0, scrollFrame.AbsoluteCanvasSize.Y * scrollPos)
        task.wait(0.1)
        
        -- Check if the pet is now visible
        for _, petButton in ipairs(scrollFrame:GetDescendants()) do
            if petButton:IsA("GuiButton") or petButton:IsA("TextButton") or petButton:IsA("ImageButton") then
                local petData = petButton:FindFirstChild("PetGUID") or petButton:GetAttribute("PetGUID")
                if petData and tostring(petData) == targetGUID then
                    return petButton
                end
            end
        end
    end
    
    return nil
end

local function addPetsToRebirthSlots(petGUIDs)
    statusLabel:Set("Status: Adding pets to rebirth slots...")
    
    -- Wait for the rebirth machine UI to open
    task.wait(1)
    
    local workspace = game:GetService("Workspace")
    
    -- Use the exact path we found
    local rebirthGui = workspace:FindFirstChild("RebirthMachine")
    if rebirthGui then
        rebirthGui = rebirthGui:FindFirstChild("Activation")
    end
    if rebirthGui then
        rebirthGui = rebirthGui:FindFirstChild("Root")
    end
    if rebirthGui then
        rebirthGui = rebirthGui:FindFirstChild("BillboardGui")
    end
    
    if not rebirthGui then
        warn("Could not find rebirth machine BillboardGui")
        return false
    end
    
    -- Find the scrolling frame for the pet inventory
    local scrollFrame = findScrollingFrame(rebirthGui)
    
    if not scrollFrame then
        warn("Could not find scrolling frame in rebirth GUI")
        return false
    end
    
    print("Found scrolling frame:", scrollFrame:GetFullName())
    
    -- Click on each of the 5 pets in the inventory
    local petsAdded = 0
    for i, petGUID in ipairs(petGUIDs) do
        if i > 5 then break end
        
        statusLabel:Set("Status: Finding pet " .. i .. "/5...")
        
        -- Scroll to find the pet
        local petButton = scrollToFindPet(scrollFrame, petGUID)
        
        if petButton then
            -- Simulate clicking the pet
            for _, connection in pairs(getconnections(petButton.MouseButton1Click)) do
                connection:Fire()
            end
            petsAdded = petsAdded + 1
            print("Clicked pet " .. i .. ": " .. petGUID)
            task.wait(0.3)
        else
            warn("Could not find pet button for: " .. petGUID)
        end
    end
    
    task.wait(0.5)
    return petsAdded >= 5
end

local function useRebirthMachineWithTP(useR)
    statusLabel:Set("Status: Getting valid pets...")
    
    local validPets = getValidSecretPets()
    
    if #validPets < 5 then
        statusLabel:Set("Status: Not enough pets (" .. #validPets .. "/5)")
        Rayfield:Notify({
            Title = "Not Enough Pets",
            Content = "Need 5 Giant Bongo Kitty pets, found: " .. #validPets,
            Duration = 3,
            Image = nil,
        })
        return false
    end
    
    local selectedPets = {}
    for i = 1, 5 do
        table.insert(selectedPets, validPets[i])
    end
    
    statusLabel:Set("Status: Finding rebirth machine...")
    
    if not teleportToRebirthMachine() then
        Rayfield:Notify({
            Title = "Failed",
            Content = "Could not find rebirth machine",
            Duration = 3,
            Image = nil,
        })
        return false
    end
    
    task.wait(0.5)
    
    statusLabel:Set("Status: Opening rebirth machine...")
    
    local VIM = game:GetService("VirtualInputManager")
    local key = useR and Enum.KeyCode.R or Enum.KeyCode.E
    
    for i = 1, 15 do
        VIM:SendKeyEvent(true, key, false, game)
        task.wait(0.1)
        VIM:SendKeyEvent(false, key, false, game)
        task.wait(0.15)
    end
    
    task.wait(0.5)
    
    statusLabel:Set("Status: Adding pets to rebirth machine slots...")
    
    -- Add pets to the rebirth machine's 5 slots by clicking them in the UI
    local success = addPetsToRebirthSlots(selectedPets)
    
    if not success then
        teleportBack()
        statusLabel:Set("Status: Failed to add pets to slots")
        Rayfield:Notify({
            Title = "Failed",
            Content = "Could not add pets to rebirth slots",
            Duration = 3,
            Image = nil,
        })
        return false
    end
    
    statusLabel:Set("Status: Clicking convert button...")
    
    -- Find and click the convert button
    local workspace = game:GetService("Workspace")
    local rebirthGui = workspace:FindFirstChild("RebirthMachine")
    if rebirthGui then
        rebirthGui = rebirthGui:FindFirstChild("Activation")
    end
    if rebirthGui then
        rebirthGui = rebirthGui:FindFirstChild("Root")
    end
    if rebirthGui then
        rebirthGui = rebirthGui:FindFirstChild("BillboardGui")
    end
    
    if rebirthGui then
        local convertButton = rebirthGui:FindFirstChild("Convert", true) or rebirthGui:FindFirstChild("ConvertButton", true) or rebirthGui:FindFirstChild("CONVERT", true)
        
        if convertButton and (convertButton:IsA("GuiButton") or convertButton:IsA("TextButton") or convertButton:IsA("ImageButton")) then
            for _, connection in pairs(getconnections(convertButton.MouseButton1Click)) do
                connection:Fire()
            end
            print("Clicked convert button")
            task.wait(1)
        end
    end
    
    statusLabel:Set("Status: Using rebirth machine with pets...")
    
    local success, result = pcall(function()
        local args = {"UseRebirthMachine", selectedPets}
        return game:GetService("ReplicatedStorage"):WaitForChild("Shared"):WaitForChild("Framework"):WaitForChild("Network"):WaitForChild("Remote"):WaitForChild("RemoteFunction"):InvokeServer(unpack(args))
    end)
    
    task.wait(0.5)
    
    teleportBack()
    
    if success then
        statusLabel:Set("Status: Rebirth complete!")
        Rayfield:Notify({
            Title = "Success",
            Content = "Rebirth machine used successfully!",
            Duration = 3,
            Image = nil,
        })
        return true
    else
        statusLabel:Set("Status: Rebirth failed - " .. tostring(result))
        Rayfield:Notify({
            Title = "Failed",
            Content = "Rebirth failed: " .. tostring(result),
            Duration = 4,
            Image = nil,
        })
        return false
    end
end

local function useRebirthMachine()
    if not Remote then
        statusLabel:Set("Status: Remote not loaded")
        return false
    end
    
    local validPets = getValidSecretPets()
    
    if #validPets < 5 then
        statusLabel:Set("Status: Not enough pets (" .. #validPets .. "/5)")
        Rayfield:Notify({
            Title = "Not Enough Pets",
            Content = "Need 5 pets, found: " .. #validPets,
            Duration = 3,
            Image = nil,
        })
        return false
    end
    
    local selectedPets = {}
    for i = 1, 5 do
        table.insert(selectedPets, validPets[i])
    end
    
    statusLabel:Set("Status: Attempting to use machine...")
    
    local success, result = pcall(function()
        return Remote:InvokeServer("UseRebirthMachine", selectedPets)
    end)
    
    task.wait(0.5)
    
    if success then
        statusLabel:Set("Status: Machine used successfully!")
        Rayfield:Notify({
            Title = "Success",
            Content = "Rebirth machine used with 5 pets!",
            Duration = 3,
            Image = nil,
        })
        return true
    else
        statusLabel:Set("Status: Machine failed - " .. tostring(result))
        Rayfield:Notify({
            Title = "Failed",
            Content = "Error: " .. tostring(result),
            Duration = 4,
            Image = nil,
        })
        return false
    end
end

RebirthTab:CreateToggle({
    Name = "Auto Rebirth Machine (R Key)",
    CurrentValue = false,
    Flag = "AutoRebirthMachineR",
    
    Callback = function(Value)
        getgenv().Functions.AutoRebirthMachine = Value
        task.spawn(function()
            while Functions.AutoRebirthMachine do
                useRebirthMachineWithTP(true)
                
                if Functions.AutoRebirthMachine then
                    for i = REBIRTH_INTERVAL, 0, -1 do
                        if not Functions.AutoRebirthMachine then break end
                        local minutes = math.floor(i / 60)
                        local seconds = i % 60
                        statusLabel:Set(string.format("Status: Next use in %02d:%02d", minutes, seconds))
                        task.wait(1)
                    end
                end
            end
            statusLabel:Set("Status: Disabled")
        end)
    end
})

RebirthTab:CreateToggle({
    Name = "Auto Rebirth Machine (E Key)",
    CurrentValue = false,
    Flag = "AutoRebirthMachineE",
    
    Callback = function(Value)
        getgenv().Functions.AutoRebirthMachineE = Value
        task.spawn(function()
            while Functions.AutoRebirthMachineE do
                useRebirthMachineWithTP(false)
                
                if Functions.AutoRebirthMachineE then
                    for i = REBIRTH_INTERVAL, 0, -1 do
                        if not Functions.AutoRebirthMachineE then break end
                        local minutes = math.floor(i / 60)
                        local seconds = i % 60
                        statusLabel:Set(string.format("Status: Next use in %02d:%02d", minutes, seconds))
                        task.wait(1)
                    end
                end
            end
            statusLabel:Set("Status: Disabled")
        end)
    end
})

local IntervalSlider = RebirthTab:CreateSlider({
    Name = "Machine Interval (minutes)",
    Range = {1, 120},
    Increment = 1,
    CurrentValue = 60,
    Flag = "MachineInterval",
    
    Callback = function(Value)
        REBIRTH_INTERVAL = Value * 60
        Rayfield:Notify({
            Title = "Interval Updated",
            Content = "Machine interval set to " .. Value .. " minutes",
            Duration = 2,
            Image = nil,
        })
    end
})

local InfoSection = RebirthTab:CreateSection("Information")

RebirthTab:CreateButton({
    Name = "Use Machine Now (R Key)",
    Callback = function()
        local success = useRebirthMachineWithTP(true)
        if not success then
            Rayfield:Notify({
                Title = "Failed",
                Content = "Could not use machine - check if it exists",
                Duration = 3,
                Image = nil,
            })
        end
    end,
})

RebirthTab:CreateButton({
    Name = "Use Machine Now (E Key)",
    Callback = function()
        local success = useRebirthMachineWithTP(false)
        if not success then
            Rayfield:Notify({
                Title = "Failed",
                Content = "Could not use machine - check if it exists",
                Duration = 3,
                Image = nil,
            })
        end
    end,
})

RebirthTab:CreateParagraph({
    Title = "How to Use",
    Content = "This script automatically uses the rebirth machine every hour using 5 Giant Bongo Kitty pets. The script will automatically equip the pets to slots 1-5 before using the machine. Make sure you have at least 5 unequipped, non-shiny, non-mythic Giant Bongo Kitty pets in your inventory."
})

local UtilityTab = Window:CreateTab("Utility", nil)
local UtilitySection = UtilityTab:CreateSection("Script Control")

UtilityTab:CreateButton({
    Name = "Explore Rebirth GUI",
    Callback = function()
        local workspace = game:GetService("Workspace")
        local rebirthMachine = workspace:FindFirstChild("RebirthMachine")
        
        if not rebirthMachine then
            Rayfield:Notify({
                Title = "Error",
                Content = "RebirthMachine not found in Workspace!",
                Duration = 3,
                Image = nil,
            })
            return
        end
        
        print("=== EXPLORING RebirthMachine in Workspace ===")
        print("RebirthMachine found:", rebirthMachine:GetFullName())
        
        local activation = rebirthMachine:FindFirstChild("Activation")
        if activation then
            print("Activation found:", activation:GetFullName())
            
            local root = activation:FindFirstChild("Root")
            if root then
                print("Root found:", root:GetFullName())
                
                local billboardGui = root:FindFirstChild("BillboardGui")
                if billboardGui then
                    print("\n=== BillboardGui found:", billboardGui:GetFullName())
                    print("=== Listing ALL descendants of BillboardGui ===")
                    
                    for _, child in pairs(billboardGui:GetDescendants()) do
                        print(string.format("  %s | Class: %s | Parent: %s", 
                            child.Name, 
                            child.ClassName, 
                            child.Parent.Name))
                        
                        if child:IsA("ScrollingFrame") then
                            print("    ^^ THIS IS A SCROLLINGFRAME ^^")
                        end
                        if child:IsA("Frame") then
                            print("    (This is a Frame)")
                        end
                    end
                else
                    print("BillboardGui not found in Root")
                end
            else
                print("Root not found in Activation")
            end
        else
            print("Activation not found in RebirthMachine")
        end
        
        Rayfield:Notify({
            Title = "GUI Explored",
            Content = "Check console (F9) for detailed results",
            Duration = 3,
            Image = nil,
        })
    end,
})

UtilityTab:CreateButton({
    Name = "Check Pet Count",
    Callback = function()
        local data = LocalData:Get()
        
        if not data then
            print("No LocalData found")
            Rayfield:Notify({
                Title = "Error",
                Content = "Could not access game data",
                Duration = 3,
                Image = nil,
            })
            return
        end
        
        print("=== PET DEBUG ===")
        print("Has Pets table:", data.Pets ~= nil)
        
        if data.Pets then
            local count = 0
            local bongoCats = 0
            local validBongoCats = 0
            
            for guid, pet in pairs(data.Pets) do
                count = count + 1
                if type(pet) == "table" and pet.Name == "Giant Bongo Kitty" then
                    bongoCats = bongoCats + 1
                    print("Found Bongo Cat:", guid)
                    print("  Equipped:", pet.Equipped or false)
                    print("  Shiny:", pet.Shiny or false)
                    print("  Mythic:", pet.Mythic or false)
                    
                    if not pet.Equipped and not pet.Shiny and not pet.Mythic then
                        validBongoCats = validBongoCats + 1
                    end
                end
            end
            
            print("Total pets:", count)
            print("Total Bongo Cats:", bongoCats)
            print("Valid Bongo Cats:", validBongoCats)
            
            Rayfield:Notify({
                Title = "Pet Count",
                Content = "Valid: " .. validBongoCats .. "\nTotal Bongo: " .. bongoCats .. "\nAll Pets: " .. count,
                Duration = 5,
                Image = nil,
            })
        else
            Rayfield:Notify({
                Title = "No Pets",
                Content = "Pets table not found in game data",
                Duration = 3,
                Image = nil,
            })
        end
    end,
})

Rayfield:LoadConfiguration()
